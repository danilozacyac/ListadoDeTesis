<telerik:RadWindow x:Class="ListadoDeTesis.FechaDeEnvioCorrecta"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                   Width="300"
                   Height="207"
                   Header="Fecha de envio"
                   ResizeMode="NoResize"
                   WindowStartupLocation="CenterScreen">
    <Grid>
        <telerik:Label Margin="21,40,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Content="Fecha de envio de la tesis" />
        <telerik:RadDatePicker x:Name="DpFechaReal"
                               Width="145"
                               Margin="41,67,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               RenderTransformOrigin="-0.505,-0.909" />
        <telerik:RadButton x:Name="BtnAceptar"
                           Width="71"
                           Height="30"
                           Margin="199,115,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Click="BtnAceptar_Click"
                           Content="Aceptar" />

    </Grid>
</telerik:RadWindow>